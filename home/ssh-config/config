# Create the SSH tunnel to K8S using:
#   Run ssh k-1-tunnel
Host k-1-tunnel
	HostName 192.168.122.131
	User vagrant
	Port 22
	IdentityFile /home/pyoung/home_dev/git/nomaj/examples/k8s-via-kubespray/build/vagrant/.vagrant/machines/k-1/libvirt/private_key
	UserKnownHostsFile /dev/null
	StrictHostKeyChecking no
	PasswordAuthentication no
	IdentitiesOnly yes
	LogLevel FATAL
        # Make the SSH tunnel to the K8S cluster
        LocalForward 6443 localhost:6443

