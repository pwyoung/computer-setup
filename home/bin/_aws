#!/bin/bash
ARGS="$@"

if [ -z "$DOT_AWS" ]; then
    DOT_AWS=$HOME/.aws
fi

AWS=/usr/local/bin/aws-v2
#AWS=/usr/local/bin/aws-v1

# Make it easy/intuitive to do things like:
#   aws s3 sync s3://bucket /tmp/shared/
SHARED=/tmp/shared
mkdir -p $SHARED

#docker run -t -i --rm -v $SHARED:$SHARED -v $DOT_AWS:/home/dev/.aws aws-tools:latest bash -c '$AWS $ARGS'

docker run -t -i --rm -v $SHARED:$SHARED -v $DOT_AWS:/home/dev/.aws aws-tools:latest $AWS $ARGS

